<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true"><shape>
            <corners android:radius="6dp" />

            <padding android:bottom="5dp" android:left="5dp" android:right="5dp" android:top="5dp" />

            <solid android:color="@color/yellow_highlighted" />

            <stroke android:width="1dp" android:color="@color/yellow_outline" />
        </shape></item>
    <item android:state_enabled="false"><shape>
            <corners android:radius="6dp" />

            <padding android:bottom="5dp" android:left="5dp" android:right="5dp" android:top="5dp" />

            <solid android:color="@color/grey_fill_disabled" />

            <stroke android:width="1dp" android:color="@color/grey_outline" />
        </shape></item>
    <item><shape android:shape="rectangle">
            <corners android:radius="6dp" />

            <padding android:bottom="5dp" android:left="5dp" android:right="5dp" android:top="5dp" />

            <gradient android:angle="270" android:endColor="@color/yellow_end" android:startColor="@color/yellow_start" />

            <stroke android:width="1dp" android:color="@color/yellow_outline" />
        </shape></item>

</selector>